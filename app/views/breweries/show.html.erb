<h2> Beers by <%=@brewery.name%>  </h2>

<ul>
  <% @brewery.beers.each do |beer| %>

  <h3><%= link_to beer.name, brewery_beer_path(@brewery, beer) %><h3>
    <ul>
      <li> <%= beer.style %> </li>
      <li>  ABV: <%= beer.abv %></li>
      <li> <% if @current_user%><%= link_to "edit", edit_brewery_beer_path(@brewery, beer) %> | <%= link_to "delete", [beer.brewery, beer], method: :delete, data:{confirm: 'are you sure?'}%><%end%></li>
    </ul>

    <% end %>
  </ul>

  <h4><%= link_to "Tried another " + @brewery.name + " beer? Add it here!", new_brewery_beer_path(@brewery) if @current_user%></h4>
